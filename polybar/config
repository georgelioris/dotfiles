time =  %{T4}%a %{F#686868}%{F#} %I:%M %p
;time-alt = %H:%M:%S %{F#F9AF4F}%{F#}%{F#C594C5}

format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #0a6cf5

label = %date% %time%

