[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = %{A1:~/bin/scripts/rofi-wifi &:}%{A3:nm-connection-editor:}<ramp-signal>%{A}%{A}
;format-connected-underline = #9f78e1
label-connected = %essid%
format-disconnected = %{A1:~/bin/scripts/rofi-wifi:}%{A3:nm-connection-editor:}<label-disconnected>%{A}%{A}
;format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = 
format-disconnected-foreground = ${colors.alert}
;label-disconnected-foreground = ${colors.foreground-alt}
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = #90E1C6

[module/eth]
type = internal/network
